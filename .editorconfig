# EditorConfig 文件示例

# 表示这是项目根目录下的顶级 .editorconfig 文件，编辑器在查找配置时会停止向上查找
root = true

# 匹配所有文件
[*]
# 使用 window 风格的换行符
end_of_line = crlf
# 文件末尾会插入一个空行
insert_final_newline = true
# 使用tab缩进
indent_style = tab
# 缩进大小为 2，对于 tab 缩进风格无效
indent_size = 2
# 制表符宽度，用于 tab 缩进风格
tab_width = 2
# 字符编码，通常设置为 utf-8
charset = utf-8
# 是否去除行末多余的空格
trim_trailing_whitespace = true

# 匹配 Markdown 文件
[*.md]
# 使用制表符缩进
indent_style = tab
