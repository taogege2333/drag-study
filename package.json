{
	"name": "drag-study",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc -b && vite build",
		"preview": "vite preview",
		"lint": "pnpm run lint-eslint && pnpm run lint-stylelint && pnpm run lint-prettier",
		"lint-eslint": "eslint --cache --fix -c eslint.config.js --cache-location node_modules/.cache/.eslintcache",
		"lint-stylelint": "stylelint --cache --fix --config .stylelintrc.js src/**/*.{less,css,scss,vue} --cache-location node_modules/.cache/.stylelintcache",
		"lint-prettier": "prettier --cache --write src/**/*.{ts,tsx,js,vue,json,vue,html,yml,css,less,scss,md}",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx,js,vue}": [
			"eslint --config eslint.config.js"
		],
		"*.{css,less,scss,vue}": [
			"stylelint --config .stylelintrc.js"
		],
		"*.{ts,tsx,js,json,vue,html,yml,css,less,scss,md}": [
			"prettier --write"
		]
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-customizable"
		},
		"cz-customizable": {
			"config": ".cz-config.cjs"
		}
	},
	"dependencies": {
		"@types/lodash-es": "^4.17.12",
		"element-plus": "^2.7.6",
		"lodash-es": "^4.17.21",
		"pinia": "^2.1.7",
		"vue": "^3.4.29",
		"vue-draggable-plus": "^0.5.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.6.0",
		"@vitejs/plugin-vue": "^5.0.5",
		"autoprefixer": "^10.4.19",
		"commitizen": "^4.3.0",
		"commitlint-config-cz": "^0.13.3",
		"cz-customizable": "^7.0.0",
		"eslint": "^9.6.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-vue": "^9.26.0",
		"globals": "^15.7.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"postcss": "^8.4.39",
		"postcss-html": "^1.7.0",
		"prettier": "^3.3.2",
		"sass": "^1.77.6",
		"stylelint": "^16.6.1",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-recess-order": "^5.0.1",
		"stylelint-config-recommended-scss": "^14.0.0",
		"stylelint-config-recommended-vue": "^1.5.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-config-standard-scss": "^13.1.0",
		"tailwindcss": "^3.4.4",
		"typescript": "^5.2.2",
		"typescript-eslint": "^7.15.0",
		"unplugin-auto-import": "^0.17.6",
		"unplugin-vue-components": "^0.27.2",
		"vite": "^5.3.1",
		"vue-tsc": "^2.0.21"
	}
}
